extends base
block append head
  script(src='/js/addBook.js' type='module' defer)
block content
  div.add-book-container.block
    h2 Add new book
    form.form.form-add-book
      div
        label(for='firstName') First name: 
        input(type='text' id='firstName' name='firstName')
      div
        label(for='lastName') Last name: 
        input(type='text' id='lastName' name='lastName' required)
      div
        label(for='title') Title: 
        input(type='text' id='title' name='title' required)
      div
        label(for='year') Year: 
        input(type='number' id='year' name='year' required)
      div
        label(for='publisher') Publisher: 
        input(type='text' id='publisher' name='publisher' required)
      div
        label(for='published') Published: 
        input(type='number' id='published' name='published' required)
      div
        label(for='pages') Pages: 
        input(type='number' id='pages' name='pages' required)
      div
        label(for='language') Language: 
        select(id='language' name='language' required)
          option(value='Lithuanian' selected) Lithuanian
          option(value='English') English
          option(value='Other') Other
      div
        label(for='format') Format: 
        select(id='format' name='format' required)
          option(value='Hardcover' selected) Hardcover
          option(value='Paperback') Paperback
      div
        label(for='isbn') ISBN: 
        input(type='text' id='isbn' name='isbn')
      div
        label(for='cover') Cover: 
        input(type='file' id='cover' name='cover' accept='image/*')
      div
        button.btn-default.btn-save Save